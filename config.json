  "namespace": "CCTC\\ConfigurationMonitorModule",
  "framework-version": 14,
  "authors": [
    {
      "name": "Mintoo Xavier",
      "email": "mintoo.xavier1@nhs.net",
      "institution": "Cambridge University Hospitals NHS Foundation Trust"
    }
